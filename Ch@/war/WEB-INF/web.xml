<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>servlet.IndexServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>addNumbersServlet</servlet-name>
    <servlet-class>servlet.addNumbersServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GuessingGameServlet</servlet-name>
    <servlet-class>servlet.GuessingGameServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FilterServlet</servlet-name>
    <servlet-class>servlet.FilterServlet</servlet-class>
  </servlet>

  <!-- AJAX servlets. -->
  <servlet>
    <servlet-name>addNumbersAjaxServlet</servlet-name>
    <servlet-class>servlet.ajax.addNumbersAjaxServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>NextGuessAjaxServlet</servlet-name>
    <servlet-class>servlet.ajax.NextGuessAjaxServlet</servlet-class>
    <servlet-class>src.servlet.IndexServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>addNumbersServlet</servlet-name>
    <servlet-class>src.servlet.addNumbersServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GuessingGameServlet</servlet-name>
    <servlet-class>src.servlet.GuessingGameServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FilterAjaxServlet</servlet-name>
    <servlet-class>servlet.ajax.FilterAjaxServlet</servlet-class>
  </servlet>

  <!-- AJAX servlets. -->
  <servlet>
    <servlet-name>addNumbersAjaxServlet</servlet-name>
    <servlet-class>src.servlet.ajax.addNumbersAjaxServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>NextGuessAjaxServlet</servlet-name>
    <servlet-class>src.servlet.ajax.NextGuessAjaxServlet</servlet-class>
  </servlet>

  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>addNumbersServlet</servlet-name>
    <url-pattern>/addNumbers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GuessingGameServlet</servlet-name>
    <url-pattern>/guessingGame</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FilterServlet</servlet-name>
    <url-pattern>/filter</url-pattern>
  </servlet-mapping>

  <!--  AJAX servlet mappings. -->
  <servlet-mapping>
    <servlet-name>addNumbersAjaxServlet</servlet-name>
    <url-pattern>/ajax/addNumbers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NextGuessAjaxServlet</servlet-name>
    <url-pattern>/ajax/nextGuess</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FilterAjaxServlet</servlet-name>
    <url-pattern>/ajax/filter</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
